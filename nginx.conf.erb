worker_processes 1;

events { worker_connections 1024; }

http {
  include       mime.types;
  default_type  application/octet-stream;

  # Example global directives
  sendfile on;
  keepalive_timeout 65;

  limit_req_zone $binary_remote_addr zone=one:10m rate=1r/s;

  server {
    listen <%= ENV["PORT"] %>;

    location / {
      root /app/public;
      index index.html;
      limit_req zone=one burst=5;
    }
  }
}
